<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playerCardView"
    android:elevation="4dp"
    android:background="@color/my_primary_dark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <Button
            android:id="@+id/position"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:text="QB"
            android:textSize="10pt"
            android:background="@drawable/button_shape"
            android:contentDescription="testing"
            android:layout_margin="1dp"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/position"
            android:layout_alignTop="@+id/position"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="Aaron Rodgers"
            android:textSize="12pt"
            android:textColor="@color/my_primary_dark"
            />

        <TextView
            android:id="@+id/gameDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/number"
            android:gravity="right"
            android:text="GB @ DEN 11AM SUN"
            android:textColor="@color/my_primary_dark"
            />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_alignLeft="@+id/name"
            android:gravity="right"
            android:text="#12"
            android:textColor="@color/my_primary_dark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/fantasyScore"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="28.84"
            android:textColor="@color/my_primary_dark"
            android:textSize="16pt"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
